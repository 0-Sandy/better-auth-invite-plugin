{
	"name": "better-auth-invite-plugin",
	"version": "0.0.0-semantically-released",
	"description": "A better-auth plugin that allows you to invite users to your app.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"scripts": {
		"format": "biome format --write src",
		"lint": "biome check --write src",
		"test": "vitest run --coverage",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/0-Sandy/better-auth-invite-plugin.git"
	},
	"keywords": [
		"better-auth",
		"invite",
		"better-auth-invite",
		"better-auth-plugin",
		"better-auth-invite-plugin",
		"better-invite-plugin",
		"better-invite",
		"invite-plugin"
	],
	"author": "Sandy",
	"license": "MIT",
	"packageManager": "pnpm@10.28.0",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"dependencies": {
		"@better-auth/utils": "^0.3.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.0.8",
		"@vitest/coverage-v8": "4.0.17",
		"better-auth": "1.4.13",
		"better-sqlite3": "^12.6.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	},
	"peerDependencies": {
		"better-auth": "^1.4.13"
	},
	"onlyBuiltDependencies": [
		"better-sqlite3"
	],
	"release": {
		"branches": [
			"main",
			{
				"name": "alpha",
				"prerelease": "alpha"
			},
			{
				"name": "beta",
				"prerelease": "beta"
			}
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/github"
		]
	}
}
