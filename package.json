{
  "name": "better-auth-invite-plugin",
  "version": "0.1.0",
  "description": "A better-auth plugin that allows you to invite users to your app.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0-Sandy/better-auth-invite-plugin.git"
  },
  "keywords": [
    "better-auth",
    "invite",
    "better-auth-invite",
    "better-auth-plugin",
    "better-auth-invite-plugin",
    "better-invite-plugin",
    "better-invite",
    "invite-plugin"
  ],
  "author": "Sandy",
  "license": "MIT",
  "packageManager": "pnpm@10.28.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@better-auth/utils": "^0.3.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.0.8",
    "typescript": "^5.9.3",
    "better-auth": "^1.3.27"
  },
  "peerDependencies": {
    "better-auth": "^1.3.27"
  }
}
